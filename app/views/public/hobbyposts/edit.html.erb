<div class="container">
 <div class="row">
  <div class="col-sm-12 mt-3">
   <span class = "h5 text-dark">投稿編集</span>
  </div>
 </div>

 <div class="row">
  <div class="mt-3 mx-auto col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0">
    <%= form_with model: @hobbypost, url: hobbypost_path(@hobbypost), method: :patch, local:true do |f| %>
   <table class="table table-borderless">
    <tbody>
     <tr>
       <td><%= f.label :genre_id, "ジャンル" %></td>
       <td><%= f.collection_select :genre_id, Genre.all, :id, :name, option = { include_blank: false }, class: "form-control" %></td>
     </tr>
     <tr>
      <td><%= f.label :title, "タイトル" %></td>
      <td><%= f.text_field :title, class: "form-control" %></td>
     </tr>
     <tr>
      <td><%= f.label :introduction, "内容" %></td>
      <td><%= f.text_area :introduction, class: "form-control" %></td>
     </tr>
     <tr>
      <td><%= f.label :image, "画像" %></td>
      <td><%= f.file_field :image, accept: "image/*" %></td>
     </tr>
     <tr>
      <td>状態</td>
      <td>
       <%= f.radio_button :status, :true %>
       <%= f.label :status, "公開", {value: :true, style: "display: inline-block;"} %>
       <%= f.radio_button :status, :false %>
       <%= f.label :status, "下書き保存", {value: :false, style: "display: inline-block;"} %>
      </td>
     </tr>
     <tr>
      <td></td>
      <td><%= f.submit "変更を保存", class: "btn btn-success btn-lg mb-2" %></td>
     </tr>
    </tbody>
   </table>
    <% end %>
  </div>
 </div>
</div>