<div class="container">
 <div class="row">
  <div class="col-sm-3 mt-3">
   <table class = "table-sm table-borderless">
    <thead>
     <th class="table-active h4">投稿フォーム</th>
    </thead>
   </table>
  </div>
 </div>

<%= form_with model: @hobbypost, url: hobbyposts_path, local:true do |f| %>
 <%= f.hidden_field :member_id, :value => current_member.id %>
 <div class="row">
  <div class="col-sm-3 mt-3">
   <table class = "table-sm table-borderless">
     <tr>
     <%= f.label :genre_id, "ジャンル" %>
     <%= f.collection_select :genre_id, Genre.all, :id, :name, option = { include_blank: false }, class: "form-control" %>
     </tr>
     <tr>
     <%= f.label :title, "タイトル" %>
     <%= f.text_field :title %>
     </tr>
     <tr>
     <%= f.label :introduction, "本文" %>
     <%= f.text_field :introduction %>
     </tr>
     <tr>
     <%= f.label :image, "アイコン画像" %>
     <%= f.file_field :image, accept: "image/*" %>
     </tr>
     <tr>
     <%= f.radio_button :status, :true %>
     <%= f.label :status, "公開", {value: :true, style: "display: inline-block;"} %>
     <%= f.radio_button :status, :false %>
     <%= f.label :status, "下書き保存", {value: :false, style: "display: inline-block;"} %></div>
     <%= f.submit "投稿する", class: "btn btn-success btn-sm mt-2 mb-2" %>
     </tr>
   </table>
  </div>
 </div>
<% end %>
</div>