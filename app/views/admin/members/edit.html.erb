<div class="container">
 <div class="row">
  <div class="col-sm-12 mt-3">
   <span class = "h5 text-dark"><%= @member.full_name %>さんの会員情報編集</span>
  </div>
 </div>

 <div class="row">
  <div class="col-sm-7 mt-3">
    <%= form_with model: @member, url: admin_member_path(@member), method: :patch, local:true do |f| %>
   <table class="table table-borderless">
    <tbody>
     <tr>
      <td><%= f.label :id, "会員ID"%></td>
      <td><%= @member.id %></td>
     </tr>
     <tr>
      <td><%= f.label :last_name, "氏名" %></td>
      <td><%= f.text_field :last_name %></td>
      <td><%= f.text_field :first_name %></td>
     </tr>
     <tr>
      <td><%= f.label :last_name_kana, "フリガナ" %></td>
      <td><%= f.text_field :last_name_kana %></td>
      <td><%= f.text_field :first_name_kana %></td>
     </tr>
     <tr>
      <td><%= f.label :nickname, "ニックネーム" %></td>
      <td><%= f.text_field :nickname %></td>
     </tr>
     <tr>
      <td><%= f.label :gender, "性別" %></td>
      <td>
       <%= f.radio_button :gender, :male %>
       <%= f.label :gender_male, "男性" %>
       <%= f.radio_button :gender, :female %>
       <%= f.label :gender_female, "女性" %>
   　　</td>
     </tr>
     <tr>
      <td><%= f.label :age, "年齢" %></td>
      <td><%= f.text_field :age %></td>
     </tr>
     <tr>
      <td><%= f.label :telephone_number, "電話番号" %></td>
      <td><%= f.text_field :telephone_number %></td>
     </tr>
     <tr>
      <td><%= f.label :email, "メールアドレス" %></td>
      <td><%= f.text_field :email %></td>
     </tr>
     <tr>
      <td><%= f.label :is_active, "会員ステータス" %></td>
      <td>
       <%= f.radio_button :is_active, :stay %>
       <%= f.label :is_active_stay, "有効" %>
       <%= f.radio_button :is_active, :withdrawal %>
       <%= f.label :is_active_withdrawal, "退会" %>
   　　</td>
     </tr>
     <tr>
      <td></td>
      <td><%= f.submit "変更を保存", class: "btn btn-success btn-lg mb-2" %></td>
     </tr>
    </tbody>
   </table>
    <% end %>
  </div>
 </div>
</div>